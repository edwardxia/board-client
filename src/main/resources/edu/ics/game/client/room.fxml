<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ics.game.client.GameRoomController">
	<children>
		<BorderPane fx:id="borderPane" layoutY="-14.0">
			<top>
				<HBox alignment="CENTER_LEFT" spacing="10.0" BorderPane.alignment="CENTER">
					<children>
						<Button mnemonicParsing="false" onAction="#leave" text="Leave" />
						<Region HBox.hgrow="ALWAYS" />
						<Label fx:id="message" />
						<Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="turn" prefHeight="17.0" prefWidth="130.0" />
						<Button mnemonicParsing="false" onAction="#hold" text="Wait" />
						<Button mnemonicParsing="false" onAction="#ready" text="Ready" />
					</children>
					<BorderPane.margin>
						<Insets bottom="20.0" />
					</BorderPane.margin>
				</HBox>
			</top>
			<padding>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</padding>
			<left>
				<GridPane fx:id="gridPane" gridLinesVisible="true" prefHeight="480.0" prefWidth="480.0" BorderPane.alignment="CENTER">
				</GridPane>
			</left>
		</BorderPane>
	</children>
</AnchorPane>
